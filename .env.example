# Copy to .env and adjust. Only fill the section for the DB you use.
PORT=6000
NODE_ENV=production
# Choose either postgres or mongo
DB_DRIVER=postgres

# Postgres settings
PG_HOST=postgres
PG_PORT=5432
PG_DATABASE=request_logs
PG_USER=postgres
PG_PASSWORD=postgres
PG_SSL=false

# Mongo settings
MONGO_URI=mongodb://mongo:27017
MONGO_DB=request_logs

# Optional log level (silent,error,info)
LOG_LEVEL=info

# --- Backup Settings ---
# Enable automated daily backups (requires pg_dump or mongodump inside container)
BACKUP_ENABLED=false
# Cron expression (UTC) for backup schedule (default: 2 AM daily)
BACKUP_CRON=0 2 * * *
# Retention days (keeps approximate number of most recent backups both local and remote)
BACKUP_RETENTION_DAYS=7
# Run a backup immediately on service start (optional)
BACKUP_RUN_ON_START=false
# Directory inside container for temporary backup artifacts
BACKUP_DIR=/tmp/db_backups

# S3 / DigitalOcean Spaces credentials (optional; if absent backups stay local only)
BACKUP_S3_ENDPOINT=          # e.g. https://nyc3.digitaloceanspaces.com (omit for AWS S3)
BACKUP_S3_REGION=us-east-1
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_PREFIX=request-logs-service/backups

